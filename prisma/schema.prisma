generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    role      UserRole @default(USER)
    name      String
    phone     String   @unique
    email     String   @unique
    password  String?
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("users")
}

model Dealership {
    id          String   @id @default(uuid())
    name        String
    description String?
    stores      Store[]
    createdAt   DateTime @default(now()) @map("created_at")
    updatedAt   DateTime @updatedAt @map("updated_at")
    file        File[]

    @@map("dealerships")
}

model Store {
    id           String     @id @default(uuid())
    name         String
    description  String?
    address      String
    city         String
    state        String
    postalCode   String
    country      String
    dealershipId String     @map("dealership_id")
    dealership   Dealership @relation(fields: [dealershipId], references: [id])
    Vehicle      Vehicle[]
    createdAt    DateTime   @default(now()) @map("created_at")
    updatedAt    DateTime   @updatedAt @map("updated_at")
    file         File[]

    @@index([dealershipId])
    @@map("stores")
}

model Vehicle {
    id              String         @id @default(uuid())
    model           String
    code            String
    version         String
    year            String
    mileage         Int
    transmission    String
    fuelType        String
    licensePlateEnd String         @map("license_plate_end")
    color           String
    price           Decimal        @db.Decimal(10, 2)
    acceptsTrade    Boolean        @map("accepts_trade")
    features        String[]
    typeId          String
    bodyTypeId      String
    makeId          String
    storeId         String
    VehicleImage    VehicleImage[] 
    store           Store          @relation(fields: [storeId], references: [id])
    make            Brand          @relation(fields: [makeId], references: [id])
    bodyType        BodyType       @relation(fields: [bodyTypeId], references: [id])
    vehicleType     VehicleType    @relation(fields: [typeId], references: [id])
    createdAt       DateTime       @default(now()) @map("created_at")
    updatedAt       DateTime       @updatedAt @map("updated_at")

    @@index([storeId])
    @@map("vehicles")
}

model Brand {
    id      String    @id @default(uuid())
    name    String    @unique
    code    String?   @unique
    alias   String    @unique
    Vehicle Vehicle[]

    @@map("brands")
}

model File {
    id           String      @id @default(uuid())
    extension    String?
    url          String?
    fileType     FileType
    dealershipId String?
    dealership   Dealership? @relation(fields: [dealershipId], references: [id])
    storeId      String?
    store        Store?      @relation(fields: [storeId], references: [id])
    createdAt    DateTime    @default(now())
    updatedAt    DateTime    @updatedAt
}

model VehicleImage {
    id        String   @id @default(uuid())
    extension String
    url       String
    vehicleId String
    vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    position  Int

    @@index([vehicleId, position])
    @@map("vehicle_images")
}

model BodyType {
    id       String    @id @default(uuid())
    name     String    @unique
    alias    String    @unique
    vehicles Vehicle[]
}

model VehicleType {
    id       String    @id @default(uuid())
    name     String    @unique
    alias    String    @unique
    vehicles Vehicle[]
}

enum UserRole {
    ADMIN
    USER
}

enum FileType {
    DEALERSHIP_PHOTO
    STORE_PHOTO
    STORE_BANNER
}
